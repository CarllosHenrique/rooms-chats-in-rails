<div class="row">
  <div class="col-md-8">
    <div class="card p-3">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0 mt-0">
          <%= @user.name %>
        </h4>
        <% if @user==current_user %>
          <%= link_to "Edit Profile" , edit_profile_path, class: "btn btn-outline-primary" %>
          <%= link_to "Logout" , destroy_user_session_path, class: "btn btn-outline-danger", data: {turbo_method: :delete}%>
        <% end %>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <p><strong>Username:</strong>
            @<%= @user.nick %>
          </p>
          <p><strong>Email:</strong>
            <%= @user.email %>
          </p>
          <p><strong>Location:</strong> none</p>
        </div>
        <div class="col-md-6">
          <p><strong>Website:</strong> none</p>
          <p><strong>Phone:</strong> none</p>
          <p><strong>Joined:</strong>
            <%= time_ago_in_words(@user.created_at) %> ago
          </p>
        </div>
        <div class="col-md-12">
          <hr>
          <p><em>- <%= @user.bio %></em></p>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-8">
    <div class="card p-3">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-0 mt-0">
          Rooms
        </h4>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6" style="width: 100%;">
          <% @user.rooms.each do |rooms| %>
            <p><strong><%= rooms.name %></strong> | <%= rooms.description.truncate(90, omission: '...') %>  | <%= link_to "[See]", room_path(rooms)%></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>