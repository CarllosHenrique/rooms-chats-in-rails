<%= form_with model: @room , class: 'form-control' do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Room name' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter room name' %>
  </div>
  <div class="form-group">
    <%= form.label :description, 'Room description' %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Enter room description' %>
  </div>
  <br>
  <%= form.submit 'Create', class: 'btn btn-primary' %>
<% end %>
