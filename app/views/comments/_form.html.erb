<%= form_with(model: [room, room.comments.build]) do |f| %>
    <div class="input-group mt-2">
        <%= f.text_field :content, class: "form-control", placeholder: "Type your message here..." %>
        <div class="input-group-append">
        <%= f.submit "Send", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>